@model ExpenseManager.ViewModel.RecordViewModel
<h3>Add Expenditure</h3>
@using (Html.BeginForm("Index", "Home", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {  <div class="clearfix"></div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Type</label>

                </div>
                <div class="col-md-8">
                    @Html.DropDownListFor(model => model.TypeId, (IEnumerable<SelectListItem>)ViewData["ExpenseTypes"], "--select--", new { @class = "form-control" })
                </div>

            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Payment</label>

                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(x => x.Payment, new { @class = "form-control" })
                </div>

            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Description</label>

                </div>
                <div class="col-md-8">
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                </div>

            </div>
            <div class="clearfix"></div>
            <div class="form-group">
                <div class="col-md-6">
                    <input type="submit" value="Save" class="btn btn-default pull-right" />
                </div>
                <div class="col-md-6">
                </div>
            </div>
}
